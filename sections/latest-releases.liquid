<section class="latest-releases">
    <div class="latest-releases--wrapper">

        {% for block in section.blocks %}
            <div class="title">
                <h3>{{ block.settings.title }}</h3>
                <h4>{{ block.settings.artist }}</h4>
                <script>
                    console.log({{ block.settings.release | json }})
                </script>
                {% for release in block.settings.release %}
                    {{ release.name }}
                {% endfor %}
            </div>
        {% endfor %}

    </div>
</section>


{% schema %}
    {
      "name": "Latest Releases",
      "tag": "section",
      "class": "latest-releases",
      "settings": [],
      "blocks": [
         {
           "name": "Release",
           "type": "text",
           "settings": [
            {
               "type": "text",
               "id": "title",
               "label": "Title"
             },
             {
               "type": "text",
               "id": "artist",
               "label": "Artist"
             },
             {
                "type": "product_list",
                "id": "release",
                "label": "Product",
                "limit": 1
            }
           ]
         }
       ]
    }
{% endschema %}