{% comment %}
Collection sorting. Needs the JavaScript that is at the bottom of this file.
{% endcomment %}
<div class="product-sorting">
  <div class="wrapper">

    {% comment %} Price Filter {% endcomment %}
    <div class="left">
      <h3>Sort</h3>
      {% render 'sorting-radios' %}
    </div>

    {% comment %} Filter Blocks {% endcomment %}
    <div class="center">
      <h3>Filter</h3>
      {% render 'product-filter-blocks' %}
    </div>

    {% comment %} Search & Artists {% endcomment %}
    <div class="right">     
      <div class="search">
        <h3>Search</h3>
        {% render 'searchbar' %}
      </div>
      <div class="separator"></div>
      <div class="artists">
        <h3>Artists</h3>
        {% render 'artist-select' %}
      </div>
    </div>

  </div>
</div>



{% comment %}
  JavaScript for collection sorting.
{% endcomment %}
<script>
    jQuery('.sort-by').on('click', function() {
      
      Shopify.queryParams.sort_by = jQuery(this).attr('value');
      location.search = jQuery.param(Shopify.queryParams).replace(/\+/g, '%20');
    });
</script>